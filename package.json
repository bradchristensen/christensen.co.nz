{
  "name": "christensen.co.nz",
  "version": "2.0.0",
  "description": "Brad Christensen's website",
  "repository": {
    "type": "git",
    "url": "https://github.com/bradchristensen/christensen.co.nz.git"
  },
  "author": "Brad Christensen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bradchristensen/christensen.co.nz/issues"
  },
  "browserslist": [
    "last 3 versions",
    "Firefox ESR",
    "ie 11",
    "not ie <= 10"
  ],
  "scripts": {
    "build": "react-scripts build",
    "lint": "eslint --ext .js .",
    "start": "react-scripts start",
    "test": "npm run lint"
  },
  "dependencies": {
    "promise-polyfill": "^6.0.2",
    "smooth-scroll": "git+https://github.com/cferdinandi/smooth-scroll.git#6437993dad979dd296c037a3cdde66cbf37d98ec",
    "whatwg-fetch": "^2.0.1"
  },
  "devDependencies": {
    "eslint": "^5.6.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "node-sass": "^4.11.0",
    "prettier": "^1.15.3",
    "react-scripts": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,css,scss,less,md,yml,yaml}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
